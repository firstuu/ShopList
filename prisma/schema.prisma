generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://user:password@localhost:5432/shopping_list_db?schema=public"
}

model ShoppingList {
  id        Int      @id @default(autoincrement())
  name      String
  items     Item[] // Relacja jeden-do-wielu (jedna lista, wiele przedmiot√≥w)
  createdAt DateTime @default(now())
}

model Item {
  id        Int          @id @default(autoincrement())
  name      String
  status    Boolean      @default(false)
  listId    Int // Klucz obcy do ShoppingList
  list      ShoppingList @relation(fields: [listId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
}
